@{
}

<h1>Employee List</h1>

<div>
    <a asp-controller="User" asp-action="Create">Create New Employee</a>
</div>

<table class="table table-bordered table-striped table-hover ">
    <thead>
    <tr class="table-success">
        <td>Id</td>
        <td>Employee-Name</td>
        <td>DepartmentRefId</td>
        <td>Salary</td>
        <td>Address</td>
        
    </tr>
    </thead>
    <tbody>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.Id</td>
            <td>@employee.Employee-Name</td>
            <td>@employee.DepartmentRefId</td>
            <td>@employee.Salary</td>
            <td>@employee.Address</td>
            
            <td>
                <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id">Details</a> | 
                <a asp-controller="Employee" asp-action="Update" asp-route-id="@employee.Id">Edit</a> |
                <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>