<h1 class="bg-dark text-warning">Create Employee</h1>
<div class="container">
    <form method="post" asp-controller="Employee" asp-action="CreateEmployee" class="bg-warning">
        <div class="row">
            <div class="form-control">
                <label>Employee-Name</label>
                <input type="text" asp-for="Name" />
            </div>
            <div class="form-control">
                <label>DepartmentRefId</label>
                <input type="text" asp-for="DepartmentRefId" />
            </div>
            <div class="form-control">
                <label>Salary</label>
                <input type="text" asp-for="Salary" />
            </div>
            <div class="form-control">
                <label>Address</label>
                <input type="text" asp-for="Address" />
            </div>

            <div class="form-control">
                <input type="submit" values="Submit" />
                <input type="reset" values="Cancel" />
               <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Back to Listing</a>

            </div>
</div>
  </form>
</div>